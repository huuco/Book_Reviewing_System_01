<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.image.thumb.url %>
    <br> <br>
    <div class="area-mark">
      <% if logged_in? %>
        <%= form_for [@book, @user_book], remote: true do |f| %>
          <div class="form-group">
            <label class="form-control">
              <%= f.check_box :favorite, class: "click-mark" %> <%= t "mark.favorite" %>
            </label>

            <label class="form-control">
              <%= f.check_box :read, class: "click-mark" %> <%= t "mark.read" %>
            </label>
            
            <label class="form-control">
              <%= f.check_box :reading, class: "click-mark" %> <%= t "mark.reading" %>
            </label>

            <%= f.submit (t "mark.mark"), class: "btn btn-success btn-mark-book", style: "display: none" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <h2 class="title-book-name"><%= @book.name %></h2>
    <h4><%= @book.author %></h4>
    <p><%= @book.description %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= render @ratings %>
  </div>
</div>
